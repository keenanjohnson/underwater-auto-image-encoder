{
  "name": "Auto Image Encoder",
  "dockerFile": "Dockerfile",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "Anthropic.claude-dev"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "editor.formatOnSave": true
      }
    }
  },
  "postCreateCommand": "npm install -g @anthropic-ai/claude-code && pip install --upgrade pip && pip install -r requirements.txt",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localWorkspaceFolder}/training_data,target=/workspace/training_data,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "PYTHONPATH": "/workspace"
  }
}